{
   "compilerOptions": {
      "outDir": "./dist",
      "lib": [
         "es2021"
      ],
      "module": "ES2015",
      "target": "es2021",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
   },
   "include": [
      "src/*",
      "src/**/*",
      "vitest.config.*",
      "vite.config.*"
   ]
}