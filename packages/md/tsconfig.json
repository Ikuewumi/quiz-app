{
   "compilerOptions": {
      "outDir": "./lib",
      "rootDir": "./src",
      "lib": [
         "es2021"
      ],
      "module": "ES2022",
      "target": "es2021",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
   },
   "include": [
      "src/*",
      "src/**/*"
   ],
   "exclude": [
      "vitest.config.*",
      "vite.config.*"
   ]
}