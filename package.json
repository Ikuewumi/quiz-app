{
   "name": "quiz-app",
   "version": "1.0.0",
   "description": "A Simple app to take and create quizzes",
   "main": "index.js",
   "scripts": {
      "ins:dev": "pnpm install --offline",
      "ins:prod": "pnpm install",
      "start": "node server/dist/app.js",
      "tb:s": "cd server && pnpm build && cd .. && pnpm start",
      "d:s": "pnpm --filter server dev",
      "d:c": "pnpm --filter client dev",
      "t:s": "pnpm --filter server test",
      "t:c": "pnpm --filter client test",
      "b": "pnpm build -r"
   },
   "keywords": [
      "fullstack",
      "quiz-app",
      "monorepo"
   ],
   "author": {
      "name": "Ayobami Ikuewumi",
      "email": "ayobamsik@gmail.com"
   },
   "repository": {
      "type": "git",
      "url": "https://github.com/Ikuewumi/quiz-app.git"
   },
   "license": "MIT",
   "workspaces": [
      "packages/**",
      "client/*",
      "server/*",
      "./*"
   ],
   "devDependencies": {
      "turbo": "^1.6.3"
   }
}