{
   "name": "quiz-app",
   "version": "1.0.0",
   "description": "A Simple app to take and create quizzes",
   "main": "index.js",
   "scripts": {
      "ins:dev": "pnpm install --offline",
      "ins:prod": "pnpm install",
      "dev:server": "npm run dev --prefix server",
      "dev:client": "npm run dev --prefix client",
      "build:server": "npm run build --prefix server",
      "build:client": "npm run build --prefix client",
      "test:server": "npm run test --prefix server",
      "test:client": "npm run test --prefix client",
      "build": "pnpm run build:client && pnpm run build:server",
      "test": "pnpm run test:server && pnpm run test:client",
      "dev": "pnpm run dev:server & pnpm run dev:client",
      "start": "node server/dist/index.js"
   },
   "keywords": [
      "fullstack",
      "quiz-app",
      "monorepo"
   ],
   "author": {
      "name": "Ayobami Ikuewumi",
      "email": "ayobamsik@gmail.com"
   },
   "repository": {
      "type": "git",
      "url": "https://github.com/Ikuewumi/quiz-app.git"
   },
   "license": "MIT"
}